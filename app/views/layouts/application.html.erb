<!DOCTYPE html>
<html>
  <head>
    <title><%= t('layouts.application.title') %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <p class="navbar-text pull-right">
        <% if user_signed_in? %>
          <strong><%= current_user.email %></strong>
          <%= t('layouts.application.logged_in_as') %>
          <%= link_to t('layouts.application.edit_profile'), edit_user_registration_path, class: 'navbar-link' %> |
          <%= link_to t('layouts.application.logout'), destroy_user_session_path, method: :delete, class: 'navbar-link'  %> |
          <%= link_to t('layouts.application.user_list'), users_index_path, class: 'navbar-link' %>
        <% else %>
          <%= link_to t('layouts.application.sign_up'), new_user_registration_path, class: 'navbar-link'  %> |
          <%= link_to t('layouts.application.login'), new_user_session_path, class: 'navbar-link'  %>
        <% end %>
      </p>
    </nav>

    <%= yield %>
  </body>
</html>
